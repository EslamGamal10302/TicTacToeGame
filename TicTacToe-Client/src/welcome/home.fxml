<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="welcome.HomeController">
   <children>
      <StackPane layoutX="-2.0">
         <children>
            <ImageView fitHeight="340.0" fitWidth="609.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@HOME@1x.png" />
               </image>
            </ImageView>
            <Pane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="ButtonSinglePlayer" layoutX="203.0" layoutY="73.0" mnemonicParsing="false" onAction="#startSinglePlayreGame" prefHeight="68.0" prefWidth="195.0" style="-fx-background-color: rgb(0, 0, 128);" text="SINGLE PLAYER" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="ButtonMultiPlayer" layoutX="206.0" layoutY="163.0" mnemonicParsing="false" onAction="#startMultiPlayerGame" prefHeight="68.0" prefWidth="195.0" style="-fx-background-color: rgb(0, 0, 128);" text="MULTI PLAYER" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="ButtonOnlineMode" layoutX="203.0" layoutY="252.0" mnemonicParsing="false" onAction="#startOnlineGame" prefHeight="68.0" prefWidth="195.0" style="-fx-background-color: rgb(0, 0, 128);" text="ONLINE MODE" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="ButtonHome" blendMode="COLOR_BURN" layoutX="14.0" layoutY="279.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="47.0" prefWidth="63.0" textFill="#461379">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="recordingButton" layoutX="491.0" layoutY="278.0" mnemonicParsing="false" onAction="#showRecord" prefHeight="51.0" prefWidth="108.0" style="-fx-background-color: #ffff66; -fx-background-radius: 20;" text="Recordings">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </StackPane>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="welcome.HomeController">
   <children>
      <StackPane layoutX="-2.0">
         <children>
            <ImageView fitHeight="601.0" fitWidth="802.0" pickOnBounds="true">
               <image>
                  <Image url="@../assets/home_background.png" />
               </image>
            </ImageView>
            <Pane>
               <children>
                  <Button fx:id="ButtonSinglePlayer" layoutX="240.0" layoutY="200.0" mnemonicParsing="false" onAction="#startSinglePlayreGame" prefHeight="77.0" prefWidth="321.0" style="-fx-background-color: #003B73; -fx-background-radius: 20;" text="Single Player" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="36.0" />
                     </font>
                  </Button>
                  <Button fx:id="ButtonMultiPlayer" layoutX="242.0" layoutY="301.0" mnemonicParsing="false" onAction="#startMultiPlayerGame" prefHeight="68.0" prefWidth="321.0" style="-fx-background-color: #003B73; -fx-background-radius: 20;" text="Multi Player" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="36.0" />
                     </font>
                  </Button>
                  <Button fx:id="ButtonOnlineMode" layoutX="240.0" layoutY="403.0" mnemonicParsing="false" onAction="#startOnlineGame" prefHeight="68.0" prefWidth="321.0" style="-fx-background-color: #003B73; -fx-background-radius: 20;" text="Online Mode" textFill="WHITE">
                     <font>
                        <Font name="System Bold Italic" size="36.0" />
                     </font>
                  </Button>
                  <ImageView fitHeight="91.0" fitWidth="346.0" layoutX="230.0" layoutY="25.0" pickOnBounds="true">
                     <image>
                        <Image url="@../assets/tile.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="ButtonHome" fitHeight="83.0" fitWidth="54.0" layoutX="69.0" layoutY="497.0" onMouseClicked="#exitGame" pickOnBounds="true">
                     <image>
                        <Image url="@../assets/exit.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
